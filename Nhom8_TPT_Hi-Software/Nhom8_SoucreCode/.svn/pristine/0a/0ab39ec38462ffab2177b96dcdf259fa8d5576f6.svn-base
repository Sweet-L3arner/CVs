<style>
	.donGia {
		color: darkred;
	}

	.a1 {
		color: cadetblue;
	}

		.a1:hover {
			background-color: cornflowerblue;
			color: azure;
			text-decoration: none;
			font-weight: 700;
			text-align: center;
		}

	.tt {
		font-weight: 700;
	}

	.d1 {
		margin: 0px;
		padding: 5px;
	}

		.d1:hover {
			filter: drop-shadow(0 0 5px blue);
			border-radius: 1%;
			padding: 0;
		}

	input[type=submit] {
		margin: 5px;
	}

	small {
		color: #FDD017;
		font-size: 20px;
	}

	a:hover {
		text-decoration: none;
	}
</style>
