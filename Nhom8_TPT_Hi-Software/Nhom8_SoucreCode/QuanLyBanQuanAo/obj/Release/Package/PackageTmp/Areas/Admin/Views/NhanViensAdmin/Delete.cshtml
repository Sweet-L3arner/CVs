@model  QuanLyBanQuanAo.Models.NhanVien

@{
	ViewBag.Title = "Xóa nhân viên";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
	<h3 style="color:red; text-align:center;">Bạn có muốn xóa nhân viên này?</h3>
	<hr />

	<div class="row">
		<div class="col-md-2">
			<img width="200" height="200" style="border-radius:50%; margin-left:30px; margin-top:20px;" src="~/Images/staffs/@Html.DisplayFor(model => model.AnhNV)" />
		</div>
		<div class="col-md-9">
			<dl class="row">
				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.Ho)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.Ho)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.Ten)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.Ten)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.GioiTinh)</dt>
				<dd class="col-sm-9 text-left">
					@{ var gtinh = "";
						if (Model.GioiTinh == true)
						{ gtinh = "Nam"; }
						else
						{ gtinh = "Nữ"; } }
					@gtinh
				</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.SDT)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.SDT)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.Email)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.Email)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.MatKhau)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.MatKhau)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.TrangThai)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.TrangThai)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.QuanLy)</dt>
				<dd class="col-sm-9 text-left">
					@{ var quanLy = "";
						if (Model.QuanLy == true)
						{ quanLy = "Quản lý"; }
						else
						{ quanLy = "Nhân viên"; } }
					@quanLy
				</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.AnhNV)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.AnhNV)</dd>

				<dt class="col-sm-3 text-right">
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<input type="submit" value="Xóa" class="btn btn-danger" />
				}
				</dt>
			</dl>
		</div>
	</div>
</div>
