@model QuanLyBanQuanAo.Models.NhanHieu

@{
	ViewBag.Title = "Xóa nhãn hiệu: " + Model.TenNhanHieu;
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h3 style="color: red; text-align:center;">Bạn có chắc chắn muốn xóa @Model.TenNhanHieu?</h3>
<div>
	<hr />
	<div class="row">
		<div class="col-md-2">
			<img width="200" height="200" style="border-radius:50%;margin-left:30px;margin-top:20px;" src="~/Images/brands/@Html.DisplayFor(model => model.AnhNH)" />
		</div>
		<div class="col-md-1"></div>
		<div class="col-md-9">
			<div>
				<hr />
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayNameFor(model => model.TenNhanHieu)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.TenNhanHieu)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.GhiChu)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.GhiChu)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.AnhNH)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.AnhNH)
					</dd>

				</dl>
			</div>

		</div>
	</div>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Xóa" class="btn btn-danger" />
		</div>
	}
</div>
