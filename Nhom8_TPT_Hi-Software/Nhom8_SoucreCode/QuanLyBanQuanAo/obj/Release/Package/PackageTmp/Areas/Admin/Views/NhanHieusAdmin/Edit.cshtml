@model QuanLyBanQuanAo.Models.NhanHieu

@{
	ViewBag.Title = "Cập nhật thông tin nhãn hiệu";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;">Cập nhật thông tin nhãn hiệu</h3>

@using (Html.BeginForm("Edit", "NhanHieusAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.MaNhanHieu)

		<div class="form-group">
			@Html.LabelFor(model => model.TenNhanHieu, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.TenNhanHieu, new { htmlAttributes = new { @class = "form-control col-md-4" } })
				@Html.ValidationMessageFor(model => model.TenNhanHieu, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.GhiChu, new { htmlAttributes = new { @class = "form-control col-md-4" } })
				@Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.AnhNH, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.AnhNH, new { htmlAttributes = new { @class = "form-control col-md-4", @readonly = "readonly" } })
				@Html.ValidationMessageFor(model => model.AnhNH, "", new { @class = "text-danger"})
				<input type="file" name="Avatar" id="Avatar" />
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Cập nhật" class="btn btn-warning" />
			</div>
		</div>
	</div>
}

@section scripts
{
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
	<script type="text/javascript">
		$(function () {
			var fileupload = $("#Avatar");
			var image = $("#FileUpload");
			image.click(function () {
				fileupload.click();
			});
			fileupload.change(function () {
				var fileName = $(this).val().split('\\')[$(this).val().split('\\').length - 1];
				document.getElementById("AnhNH").value = fileName;
			});
		});
	</script>
}