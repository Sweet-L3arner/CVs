<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>@ViewBag.Title</title>
	<!-- Favicon-->
	<link rel="icon" type="image/x-icon" href="~/Assets/User/assets/favicon.ico" />
	<!-- Core theme CSS (includes Bootstrap)-->
	<link href="~/Assets/User/css/styles.css" rel="stylesheet" />
	<!-- icon bootstrap -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

	<style>
		.dropdown-menu:hover {
			display: inline;
		}

		body, html {
			height: 100%;
			font-family: "Inconsolata", sans-serif;
		}

		.nv {
			margin-top: 70px;
		}

		.shadow-div {
			box-shadow: 0px 6px 10px -5px grey;
		}

		.nav-link, .navbar-brand {
			font-size: 16px;
			margin: 3px;
			color: #fff !important;
			font-weight: 500;
		}
	</style>
</head>
<body>
	<!-- Navigation-->
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="background-image:linear-gradient(-90deg,#d38312,#a83279);" >
		<div class="container">
			<a class="navbar-brand" href="@Url.Action("Index", "TrangChu")">Teddy Fashion</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
			<div class="collapse navbar-collapse" id="navbarResponsive">
				<ul class="navbar-nav ml-auto dropdown">

					<li class="nav-item"><a class="nav-link" href="@Url.Action("About", "TrangChu")">Thông tin cửa hàng</a></li>
					@*<li class="nav-item"><a class="nav-link" href="#!">Services</a></li>
						<li class="nav-item"><a class="nav-link" href="#!">Contact</a></li>*@
					<li class="nav-item">@Html.Action("GioHangPartial", "GioHangs")</li>
					<li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "SanPhams")">Tìm kiếm sản phẩm</a></li>

					<li class="navbar-nav ml-auto ml-md-0">
						@{
							try
							{
								string hoTen = Session["Customer"].ToString();

								if (hoTen != null)
								{
									ViewBag.NguoiDung = hoTen;
									<a class="nav-link dropdown-toggle" id="userDropdown" href="#!" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-person-check"></i></a>

									<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
										<a class="dropdown-item" href="#!">@ViewBag.NguoiDung</a>
										<div class="dropdown-divider"></div>
										@Html.ActionLink("Thông tin cá nhân", "ThongTinKhachHang", "KhachHangs", new { @id = Session["MaKhachHang"].ToString() }, new { @class = "dropdown-item" })
										@Html.ActionLink("Đăng xuất", "Logout", "KhachHangs", "", new { @class = "dropdown-item" })
									</div>
								}
								else {}
							}
							catch
							{
								<a class="nav-link dropdown-toggle" id="userDropdown" href="#!" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="bi bi-person-check"></i></a>
								<div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
									@Html.ActionLink("Đăng nhập", "Login", "KhachHangs", "", new { @class = "dropdown-item" })
									@Html.ActionLink("Đăng ký", "Regis", "KhachHangs", "", new { @class = "dropdown-item" })
								</div> 
							}
						}
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<!-- Page Content-->
	<div class="container nv">

		@RenderBody()

	</div>
	<!-- Footer--> <!--Oni Chan-->
    <footer id="footer" class="clearfix text-light container" style="background-image:linear-gradient(-90deg,#d38312,#a83279);">
        <div id="footer-widgets">

            <div class="container">
                <div id="footer-wrapper">
					<div class="row">
						<div class="col-sm-6 col-md-4">
							<div id="meta-3" class="widget widgetFooter widget_meta">
								<h4 class="widgettitle">Về công ty</h4>
								<ul>
									<a href="#" class="nav-link"><i class="bi bi-house"></i> Trang chủ</a>
									<a href="#" class="nav-link"><i class="bi bi-link"></i></i> Giấy phép kinh doanh</a>
									<a href="#" class="nav-link"><i class="bi bi-envelope"></i> Liên hệ</a>
								</ul>
							</div>
						</div> <!-- end widget1 -->
						<div class="col-md-4 "></div>
						<div class="col-sm-6 col-md-4">
							<div id="recent-posts-3" class="widget widgetFooter widget_recent_entries">
								<h4 class="widgettitle">Liên hệ qua mạng xã hội: </h4>
								<ul>
									<a href="https://www.facebook.com/mr.dauod" target="_blank" class="nav-link"><i class="bi bi-facebook"></i> Facebook</a>
									<a href="https://www.twitter.com/ayatquranCom" target="_blank" class="nav-link"><i class="bi bi-twitter"></i> Twitter</a>
									<a href="http://www.youtube.com/user/sonsofye" target="_blank" class="nav-link"><i class="bi bi-youtube"></i> Youtube</a>
								</ul>
							</div>
						</div> <!-- end widget1 -->

					</div> <!-- end .row -->

                </div> <!-- end #footer-wrapper -->

            </div> <!-- end .container -->
        </div> <!-- end #footer-widgets -->
        <div id="sub-floor">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 copyright">
                    </div>
                    <div class="col-md-4"></div>
                    <div class="col-md-3 col-md-offset-4 attribution">
                        Phát triển bởi TPT Software  <a target="_blank" href="#"></a> .
                    </div>
                </div> <!-- end .row -->
            </div>
        </div>

    </footer>
	<!-- Bootstrap core JS-->
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
	<!-- Core theme JS-->
	<script src="~/Assets/User/js/scripts.js"></script>

	@Scripts.Render("~/bundles/jqueryval");
</body>
</html>
