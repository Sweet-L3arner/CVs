@model QuanLyBanQuanAo.ViewModels.TrangChuViewModel

@{ Layout = "~/Views/Shared/_LayoutUser.cshtml";
	ViewBag.Title = "Trang chủ"; }

@* Style for website *@
<style>
	.donGia {
		color: darkred;
	}

	.a1 {
		color: cadetblue;
	}

		.a1:hover {
			background-color: cornflowerblue;
			color: azure;
			text-decoration: none;
			font-weight: 700;
			text-align: center;
		}

	.tt {
		font-weight: 700;
	}

	.d1 {
		margin: 0px;
		padding: 5px;
	}

		.d1:hover {
			filter: drop-shadow(0 0 5px blue);
			border-radius: 1%;
			padding: 0;
		}

	input[type=submit] {
		margin: 5px;
	}

	small {
		color: #FDD017;
		font-size: 20px;
	}

	a:hover {
		text-decoration: none;
	}
</style>


<div class="row">
	<!--3 Cột trái  là thương hiệu-->
    <div class="col-lg-3">
        <div class="list-group" style="border-radius:20px 20px 0px 0px">
            <h3 class="list-group-item bg-danger text-center text-white">Thương hiệu</h3>
			@foreach (var item in Model.NhanHieus)
			{
				@Html.ActionLink(item.TenNhanHieu, "Details", "NhanHieus", new { @id = item.MaNhanHieu }, new { @class = "list-group-item a1 font-weight-bold" })
			}
        </div>
    </div>
    <!--Kết thúc cột thương hiệu-->

	<!--Slide là 9 cột phải -->
    <div class="col-lg-9">
        <div class="carousel slide my-4" id="carouselExampleIndicators" data-ride="carousel">
            <ol class="carousel-indicators">
                <li class="active" data-target="#carouselExampleIndicators" data-slide-to="0"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active"><img class="d-block img-fluid" src="http://2.bp.blogspot.com/-36CbPsN8-Bw/VXnYkFj9fzI/AAAAAAAAV0Q/G13EUt2I3wQ/s1600/oliversweeneycoventgarden7.png" alt="First slide" width="900" height="350" /></div>
                <div class="carousel-item"><img class="d-block img-fluid" src="http://4.bp.blogspot.com/-7vED9xLhmlI/VXnV9DFs5EI/AAAAAAAAVzs/FXnln0RWju0/s1600/oliversweeneycoventgarden3.png" alt="Second slide" /></div>
                <div class="carousel-item"><img class="d-block img-fluid" src="http://2.bp.blogspot.com/--Y9cLb5DEIE/VXnZiEFolaI/AAAAAAAAV0g/cdqSBBVbIsA/s1600/oliversweeneycoventgarden8.png" alt="Third slide" /></div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <!--Kết thúc slide -->

	<!--Bắt đầu cột loại sản phẩm-->
    <div class="col-lg-3">
		<div class="list-group" style="border-radius:20px 20px 0px 0px">
			<h3 class="list-group-item bg-danger text-center text-white">Loại sản phẩm</h3>
			@foreach (var item in Model.LoaiSanPhams)
			{
				@Html.ActionLink(item.TenLoaiSanPham, "Details", "LoaiSanPhams", new { @id = item.MaLoaiSanPham }, new { @class = "list-group-item  a1 font-weight-bold" })
			}
		</div>
    </div>
    <!--Kết thúc cột loại sản phẩm-->

	<!--Bắt đầu cột sản phẩm-->
    <div class="col-md-9 ">
    @* Danh sách sản phẩm *@
		@foreach (var item in Model.LoaiSanPhams)
		{
			<hr />
			<p class="h3 tt">@item.TenLoaiSanPham</p>
			<div class="row">
				@if (item.MaLoaiSanPham.Contains(item.MaLoaiSanPham))
				{
					@Html.Partial("_PartialSanPhams", item.SanPhams)
				}
			</div>
			<br />
		}
    </div>

    <!--Kết thúc cột sản phẩm-->
</div>



