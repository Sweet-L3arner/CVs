	<div class="row">
		<div class="col-md-2">
			<img width="200" height="200" style="border-radius:50%; margin-left:30px; margin-top:20px;" src="~/Images/brands/@Html.DisplayFor(model => model.AnhNH)" />
		</div>
		<div class="col-md-1"></div>
		<div class="col-md-9">
			<div>
				<hr />
				<dl class="dl-horizontal">
					<dt>
						@Html.DisplayNameFor(model => model.TenNhanHieu)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.TenNhanHieu)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.TenNhanHieu)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.GhiChu)
					</dd>

					<dt>
						@Html.DisplayNameFor(model => model.AnhNH)
					</dt>

					<dd>
						@Html.DisplayFor(model => model.AnhNH)
					</dd>

				</dl>
			</div>
			<p style="padding-top: 30px">
				@Html.ActionLink("Cập nhật", "Edit", new { id = Model.MaNhanHieu }, new { @class = "btn btn-warning"}) |
				@Html.ActionLink("Xóa", "Delete", new { id = Model.MaNhanHieu }, new { @class = "btn btn-danger" })
