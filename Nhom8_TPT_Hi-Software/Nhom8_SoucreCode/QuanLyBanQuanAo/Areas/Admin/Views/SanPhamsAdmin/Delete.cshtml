@model QuanLyBanQuanAo.Models.SanPham

@{
	ViewBag.Title = "Xóa sản phẩm: " + Model.TenSanPham;
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div>
	<h3 style="color:red; text-align:center;">Bạn có muốn xóa @Model.TenSanPham?</h3>
	<hr />

	<div class="row">
		<div class="col-md-2">
			<img width="200" height="200" style="border-radius:50%;margin-left:30px;margin-top:20px;" src="~/Images/products/@Html.DisplayFor(model => model.AnhSP)" />
		</div>
		<div class="col-md-9">
			<dl class="row">
				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.MaSanPham)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.MaSanPham)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.TenSanPham)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.TenSanPham)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.NhanHieu.TenNhanHieu)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.NhanHieu.TenNhanHieu)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.LoaiSanPham.TenLoaiSanPham)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.LoaiSanPham.TenLoaiSanPham)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.NoiSanXuat)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.NoiSanXuat)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.DonGia)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.DonGia)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.TinhTrang)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.TinhTrang)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.MoTa)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.MoTa)</dd>

				<dt class="col-sm-3 text-right">@Html.DisplayNameFor(model => model.AnhSP)</dt>
				<dd class="col-sm-9 text-left">@Html.DisplayFor(model => model.AnhSP)</dd>

				<dt class="col-sm-3 text-right">
				@using (Html.BeginForm())
				{
					@Html.AntiForgeryToken()
					<input type="submit" value="Xóa" class="btn btn-danger" />
				}
				</dt>
			</dl>
		</div>
	</div>
</div>